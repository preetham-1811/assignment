<div class="container-fluid">
  <div class="row justify content center">
    <div class="col-md-7">
      <h1>Users</h1>
      <table class="table">
        <thead>
          <tr>
            <th scope="col">#</th>
            <th scope="col">id</th>
            <th scope="col"></th>
          </tr>
        </thead>
        <tbody>
          <% @users.each_with_index do |u, index|   %>
            <tr>
              <th scope="row"> <%= index+1 %></th>
              <td><%= u.uid %></td>
              <% if u.is_active? %>
                <td><%= link_to 'Ban', {controller: :examscheduler, action: :ban_users, :id => u.id}, class: 'btn btn-danger' %></td>
              <% else %>
                <td><%= link_to 'Unban', {controller: :examscheduler, action: :ban_users, :id => u.id}, class: 'btn btn-primary' %></td>
              <% end %>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>